{
    "builders": [
        {
            "type": "virtualbox-ovf",
            "source_path": "{{user `virtualbox_source_path`}}",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "360s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "virtualbox_version_file": ".vbox_version"
        },
        {
            "type": "vmware-ovf",
            "source_path": "{{user `vmware_source_path`}}",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "360s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
        }
    ],
    "Provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `http_proxy`}}"
            ],
            "inline": [
                "curl -skL https://getchef.com/chef/install.sh | sudo -E bash"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "builds/{{.BuildName}}-{{.Provider}}-centos-6.5-x86_64.box",
            "vagrantfile_template": "Vagrantfile",
            "include": [ ".env" ]
        }
    ],
    "variables": {
        "virtualbox_source_path": "",
        "vmware_source_path": ""
    }
}
