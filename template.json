            ],
            "inline": [
                "curl -skL https://getchef.com/chef/install.sh | sudo -E bash"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 1,
            "output": "builds/{{.BuildName}}.box",
            "vagrantfile_template": "Vagrantfile",
            "include": [ ".env" ]
        }
    ],
    "variables": {
